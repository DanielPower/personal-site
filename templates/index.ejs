<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="style.css" />
  <link rel="stylesheet" href="type.css" />
</head>

<body>
  <div class="container">
    <h1>
      <%= name %>
    </h1>
    <p>
      <%= jobTitle %> @
      <a href="<%= jobUrl %>">
        <%= companyName %>
      </a>
    </p>
    <p>
      <a class="email" href="mailto:<%= email %>@danielpower.ca">
        <%= email %>
      </a>
    </p>
    <div class="badge-container">
      <% links.forEach((link)=> { %>
        <a class="badge" title="<%= link.title %>" href="<%= link.url %>">
          <img src="res/<%= link.icon %>" />
          <p>
            <%= link.title %>
          </p>
        </a>
      <% }) %>
    </div>
    <h2>Projects</h2>
    <% projects.forEach((project)=> { %>
      <h3>
        <%= project.title %>
      </h3>
      <p>
        <%= project.description %>
      </p>
      <% project.links.forEach((link)=> { %>
        <p>
          <a href="<%= link.url %>">
            <%= link.title %>
          </a>
        </p>
      <% }) %>
    <% }) %>
  </div>
</body>

</html>
